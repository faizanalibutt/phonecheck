<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <com.upgenicsint.phonecheck.views.TypeFacedButton
        android:text="@string/back"
        android:id="@+id/nav_back"
        android:onClick="back_pressed"
        style="@style/MainHeaderText"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.upgenicsint.phonecheck.views.TypeFacedButton
        android:text=""
        android:id="@+id/nav_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:textStyle="bold"
        android:id="@+id/nav_buildTextView"
        android:textColor="@android:color/black"
        android:text="@string/build_version"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.upgenicsint.phonecheck.views.TypeFacedButton

        android:text="@string/done"
        android:id="@+id/nav_done"
        android:onClick="done_pressed"
        style="@style/MainHeaderText"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>